generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  passwordHash   String
  name           String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Subscription
  subscriptionStatus  SubscriptionStatus @default(FREE)
  revenuecatId        String?

  // Progress (synced from mobile)
  completedChapters   Int[]    @default([])
  completedBooks      Int[]    @default([])
  chatMessageCount    Int      @default(0)
  streak              Int      @default(0)
  lastActiveDate      String   @default("")
  graduated           Boolean  @default(false)

  // Rate limiting
  dailyCoachMessages  Int      @default(0)
  lastCoachResetDate  String   @default("")

  chatMessages        ChatMessage[]
}

model ChatMessage {
  id        String   @id @default(cuid())
  userId    String
  role      String   // 'user' | 'assistant'
  content   String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

enum SubscriptionStatus {
  FREE
  PREMIUM
  EXPIRED
}
